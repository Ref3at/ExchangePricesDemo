<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:checkable="true"
    app:cardBackgroundColor="@color/black"
    >

    <LinearLayout
        android:layout_marginTop="@dimen/_2sdp"
        android:padding="@dimen/_5sdp"
        android:id="@+id/lytRootView"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="match_parent"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/ic_baseline_copyright_24"/>

        <View
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_width="1dp"
            android:background="@android:color/darker_gray"
            android:layout_height="match_parent"/>


        <TextView
            android:gravity="start"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14ssp"
            android:text="USD/AED"
            android:id="@+id/txtName"/>

        <View
            android:layout_width="1dp"
            android:background="@android:color/darker_gray"
            android:layout_height="match_parent"/>

        <TextView
            android:gravity="center"
            android:layout_weight="1.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16ssp"
            android:text="1.65432"

            android:drawableEnd="@drawable/ic_arrow_up_24"
            android:id="@+id/txtBidPrice"/>

        <View
            android:layout_width="1dp"
            android:background="@android:color/darker_gray"
            android:layout_height="match_parent"/>

        <TextView
            android:drawableEnd="@drawable/ic_arrow_down_24"
            android:gravity="center"
            android:layout_weight="1.3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16ssp"
            android:text="1.234567"
            android:id="@+id/txtAskPrice"/>




    </LinearLayout>


</com.google.android.material.card.MaterialCardView>
